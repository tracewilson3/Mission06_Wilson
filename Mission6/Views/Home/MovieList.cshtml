@model List<Film>

<h1>Movie List</h1>

@if (Model == null || !Model.Any())
{
    <p>No movies found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Category</th>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>Copied To Plex</th>
            <th>Notes</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@(x.Category.CategoryName)</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@(x.Edited)</td>
                <td>@x.LentTo</td>
                <td>@x.CopiedToPlex</td>
                <td>@x.Notes</td>
                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>
            </tr>
        }
        </tbody>
    </table>
}